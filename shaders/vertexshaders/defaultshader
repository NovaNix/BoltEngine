#version 330 core
layout (location = 0) in vec2 vertex;
layout (location = 1) in vec2 texcoords;

out vec2 TexCoords;

uniform bool Raw = false; 
uniform bool Referenced = false;

uniform mat4 model;
uniform mat4 projection;

void main()
{
    TexCoords = texcoords;
    
    if (Raw)
    {
    	gl_Position = projection * model * vec4(vertex, 0.0, 1.0);
    }
    
    else if (Referenced)
    {
    	gl_Position = projection * model * vec4(vertex, 0.0, 1.0);
    }
    
    else
    {
    	Raw = true;
    }
}
